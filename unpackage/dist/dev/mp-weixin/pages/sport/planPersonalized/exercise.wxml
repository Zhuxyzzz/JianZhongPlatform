<view class="exercise-container data-v-0cb817ca"><view class="exercise-header data-v-0cb817ca"><image class="exercise-image data-v-0cb817ca" src="{{exercise.img}}" mode="aspectFill"></image><text class="exercise-title data-v-0cb817ca">{{exercise.name}}</text><text class="exercise-desc data-v-0cb817ca">{{exercise.desc}}</text></view><view class="timer-section data-v-0cb817ca"><block wx:if="{{isCountdown}}"><text class="timer-display data-v-0cb817ca">{{"倒计时："+countdown}}</text></block><block wx:else><text class="timer-display data-v-0cb817ca">{{timerDisplay}}</text></block><view class="control-buttons data-v-0cb817ca"><block wx:if="{{!isCountdown&&!isRunning}}"><button data-event-opts="{{[['tap',[['startCountdown',['$event']]]]]}}" bindtap="__e" class="data-v-0cb817ca">开始运动</button></block><block wx:if="{{isRunning}}"><button data-event-opts="{{[['tap',[['resetTimer',['$event']]]]]}}" bindtap="__e" class="data-v-0cb817ca">重置运动</button></block><block wx:if="{{isRunning}}"><button data-event-opts="{{[['tap',[['endExercise',['手动结束']]]]]}}" bindtap="__e" class="data-v-0cb817ca">结束运动</button></block></view></view><view class="exercise-info data-v-0cb817ca"><text class="data-v-0cb817ca">{{"总时长: "+exercise.duration+" 分钟"}}</text><text class="data-v-0cb817ca">{{"预计消耗: "+exercise.calories+" kcal"}}</text></view><view class="record-section data-v-0cb817ca"><text class="section-title data-v-0cb817ca">运动记录</text><block wx:if="{{$root.g0===0}}"><view class="no-records data-v-0cb817ca"><text class="data-v-0cb817ca">暂无记录</text></view></block><block wx:for="{{records}}" wx:for-item="record" wx:for-index="index" wx:key="id"><view class="record-item data-v-0cb817ca"><text class="data-v-0cb817ca">{{record.timestamp+" - "+record.name+" - 时长: "+record.duration+" 秒 - "+record.reason}}</text><button data-event-opts="{{[['tap',[['deleteRecord',[index]]]]]}}" bindtap="__e" class="data-v-0cb817ca">删除</button></view></block></view></view>